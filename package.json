{
  "name": "ledcontroller",
  "version": "1.0.0",
  "description": "a controller program to controll my led strip(s)",
  "main": "index.js",
  "scripts": {
    "start": "nodemon -x npm run run -e ts",
    "run": "tsc && sudo killall pigpiod || echo 'no process stopped' && sudo node dist/index.js",
    "runInspect": "tsc && sudo node --inspect dist/index.js",
    "runInspectBreak": "tsc && sudo node --inspect-brk dist/index.js",
    "runWin": "ts-node index.ts",
    "runWinInspect": "tsc && node --inspect dist/index.js",
    "runWinInspectBreak": "tsc && node --inspect-brk dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NilsGke/ledController.git"
  },
  "author": "Nils Goeke",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NilsGke/ledController/issues"
  },
  "homepage": "https://github.com/NilsGke/ledController#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "pigpio": "^3.3.1",
    "ws": "^8.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.0.6",
    "@types/node-static": "^0.7.7",
    "@types/ws": "^8.5.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}